% for GTO 1s only
function V = nuclei_electron_int(...
        basis_alphas, basis_centers, nuclei_centers, nuclei_z ...
    )
    V = zeros(length(basis_alphas), length(basis_alphas));
    for i = 1:length(basis_alphas)
        for j = 1:length(basis_alphas)
            a = basis_alphas{i};
            b = basis_alphas{j};
            ra = basis_centers{i};
            rb = basis_centers{j};
            rp = (a * ra + b * rb) / (a + b);
            V(i,j) = ...
                (a * b / (a + b)) * ...
                (...
                    3 - 2 * a * b / (a + b)...
                    * norm( - )^2 ...
                );
        end
    end
    V = V .* S;
end